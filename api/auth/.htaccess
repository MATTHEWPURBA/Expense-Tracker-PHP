# API Auth Directory Router
# Routes /api/auth/login to /api/auth/login.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/auth/
    
    # Route /api/auth/login to /api/auth/login.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^/]+)$ $1.php [L]
</IfModule>

